{
  "compilerOptions": {
    "jsx": "react-jsx", // Ensure React JSX is set up
    "esModuleInterop": true, 
    "module": "commonjs", // Jest works better with CommonJS in Node.js environment
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true, 
    "target": "ES2017" 
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": ["src/**/*"]
}
